<UserControl
    x:Class="Cyclone.LicenseManagement.Server.Views.LicenseDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Cyclone.LicenseManagement.Server.Converters"
    xmlns:ctl="clr-namespace:Cyclone.LicenseManagement.Server.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.LicenseManagement.Server.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Cyclone.LicenseManagement.Server.Properties"
    xmlns:vm="clr-namespace:Cyclone.LicenseManagement.Server.ViewModels"
    d:DataContext="{d:DesignInstance vm:LicenseDetailViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" IsEnabled="{Binding IsGeneration}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition MinWidth="320" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    Padding="5"
                    BorderBrush="DarkGray"
                    BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Customer_Name_}}"
                            SharedName="A">
                            <TextBox Margin="5,0,0,0" Text="{Binding CustomerName}" />
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Email_}}"
                            SharedName="A">
                            <TextBox Margin="5,0,0,0" Text="{Binding CustomerEmail}" />
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Password_}}"
                            SharedName="A">
                            <PasswordBox Margin="5,0" mah:PasswordBoxBindingBehavior.Password="{Binding Passphrase}" />
                            <ctl:FormItem.AttachedObject>
                                <Button Width="100" Command="{Binding GenerateLicenseKeypairCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <mah:FontIcon Glyph="&#xe9db;" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="{I18N {x:Static p:LangKeys.Generate_Key}}" />
                                    </StackPanel>
                                </Button>
                            </ctl:FormItem.AttachedObject>
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Serial_Number_}}"
                            SharedName="A">
                            <TextBlock Margin="5,0" Text="{Binding UniqueIdentifier}" />
                            <ctl:FormItem.AttachedObject>
                                <Button Width="100" Command="{Binding GenerateUniqueIdentifierCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <mah:FontIcon Glyph="&#xe99d;" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="{I18N {x:Static p:LangKeys.Regenerate}}" />
                                    </StackPanel>
                                </Button>
                            </ctl:FormItem.AttachedObject>
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Public_Key_}}"
                            SharedName="A">
                            <TextBox
                                Margin="5,0,0,0"
                                mah:TextBoxHelper.ClearTextButton="False"
                                mah:TextBoxHelper.Watermark="{I18N {x:Static p:LangKeys.Must_generate_key_before_saving_license_file___}}"
                                BorderThickness="0"
                                IsReadOnly="True"
                                Text="{Binding PublicKey}"
                                TextWrapping="WrapWithOverflow" />
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Signature_}}"
                            SharedName="A">
                            <TextBox
                                Margin="5,0,0,0"
                                mah:TextBoxHelper.ClearTextButton="False"
                                BorderThickness="0"
                                IsReadOnly="True"
                                Text="{Binding Signature}"
                                TextWrapping="WrapWithOverflow" />
                        </ctl:FormItem>
                    </StackPanel>
                </Border>
                <Border
                    Grid.Column="2"
                    BorderBrush="DarkGray"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <UniformGrid Grid.Row="0" Rows="1">
                            <Button Command="{Binding AddAdditionalFeatureCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <mah:FontIcon Glyph="&#xe892;" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{I18N {x:Static p:LangKeys.Add}}" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding RemoveAdditionalFeatureCommand}" CommandParameter="{Binding ElementName=AdditionalFeaturesListBox, Path=SelectedItem}">
                                <StackPanel Orientation="Horizontal">
                                    <mah:FontIcon Glyph="&#xe891;" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{I18N {x:Static p:LangKeys.Remove}}" />
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                        <ListBox
                            x:Name="AdditionalFeaturesListBox"
                            Grid.Row="1"
                            Margin="0,5,0,0"
                            ItemsSource="{Binding AdditionalFeatures}">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="vm:AdditionalFeatureViewModel">
                                    <StackPanel Orientation="Vertical">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Content="{I18N {x:Static p:LangKeys.Key}}" />
                                            <TextBox Grid.Column="1" Text="{Binding Key}" />
                                            <Label
                                                Grid.Column="2"
                                                Margin="5,0,0,0"
                                                Content="{I18N {x:Static p:LangKeys.Value}}" />
                                            <TextBox
                                                Grid.Column="3"
                                                Margin="5,0,0,0"
                                                Text="{Binding Value}" />
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <Border
                Grid.Row="2"
                Padding="5"
                BorderBrush="DarkGray"
                BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <ctl:FormItem Label="{I18N {x:Static p:LangKeys.License_Type_}}" SharedName="B">
                            <ComboBox Margin="5,0,0,0" SelectedIndex="{Binding SelectedLicenseIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="{I18N {x:Static p:LangKeys.Standard}}" />
                                <ComboBoxItem Content="{I18N {x:Static p:LangKeys.Trial}}" />
                            </ComboBox>
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.License_Count_}}"
                            SharedName="B">
                            <mah:NumericUpDown
                                Margin="5,0,0,0"
                                Maximum="99"
                                Minimum="1"
                                Value="{Binding Quantity}" />
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Activation_Days_}}"
                            SharedName="B">
                            <mah:NumericUpDown
                                Margin="5,0,0,0"
                                Maximum="3650"
                                Minimum="1"
                                Value="{Binding ActivationDays}" />
                        </ctl:FormItem>
                        <ctl:FormItem
                            Margin="0,5,0,0"
                            Label="{I18N {x:Static p:LangKeys.Expiration_Date_}}"
                            SharedName="B">
                            <mah:DateTimePicker
                                Margin="5,0,0,0"
                                Culture="zh-CN"
                                IsReadOnly="True"
                                SelectedDateTime="{Binding ExpirationDate}" />
                        </ctl:FormItem>
                    </StackPanel>
                    <Border
                        Grid.Column="1"
                        Width="150"
                        Margin="5,0,0,0"
                        Background="#F5F5F5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource IconFont}"
                            FontSize="56">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLicenseValid}" Value="True">
                                            <Setter Property="Text" Value="&#xe9d9;" />
                                            <Setter Property="Foreground" Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsLicenseValid}" Value="False">
                                            <Setter Property="Text" Value="&#xe9da;" />
                                            <Setter Property="Foreground" Value="Red" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsLicenseValid}" Value="{x:Null}">
                                            <Setter Property="Text" Value="&#xe61b;" />
                                            <Setter Property="Foreground" Value="DarkOrange" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        <UniformGrid
            Grid.Row="1"
            Margin="0,5,0,0"
            Rows="1">
            <Button Command="{Binding SaveLicenseFileCommand}">
                <StackPanel Orientation="Horizontal">
                    <mah:FontIcon Glyph="&#xe9c2;" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="{I18N {x:Static p:LangKeys.Save_License_File}}" />
                </StackPanel>
            </Button>
            <Button Margin="5,0" Command="{Binding LoadLicenseFileCommand}">
                <StackPanel Orientation="Horizontal">
                    <mah:FontIcon Glyph="&#xeac5;" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="{I18N {x:Static p:LangKeys.Load_License_File}}" />
                </StackPanel>
            </Button>
            <Button Margin="0,0,5,0" Command="{Binding UnloadLicenseFileCommand}">
                <StackPanel Orientation="Horizontal">
                    <mah:FontIcon Glyph="&#xeac6;" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="{I18N {x:Static p:LangKeys.Clear_License_File}}" />
                </StackPanel>
            </Button>
            <Button Command="{Binding ValidateLicenseCommand}">
                <StackPanel Orientation="Horizontal">
                    <mah:FontIcon Glyph="&#xe9d8;" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="{I18N {x:Static p:LangKeys.Validate_License_File}}" />
                </StackPanel>
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>